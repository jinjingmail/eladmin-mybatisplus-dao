<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.zhengjie.service.mapper.QiniuContentMapper">

  <!-- 通用查询结果列 -->

  <sql id="Base_Column_List">
      a.content_id as id, a.bucket, a.name, a.size, a.type, a.url, a.suffix, a.update_time
  </sql>

    <select id="findByKey" resultType="me.zhengjie.domain.QiniuContent">
        SELECT <include refid="Base_Column_List"/> FROM tool_qiniu_content
        WHERE name=#{key}
    </select>
</mapper>
